<div class='jumbotron'>
  <h1>Dev Junction</h1>
  <h3>A membership site where enterpreneurs meet developers.</h3>
</div>
<div class="row">
  <% if user_signed_in?  %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Your Profile</h2>
        <% if current_user.profile %>
          <%= link_to "Edit your profile", edit_user_profile_path(current_user), class: 'btn btn-primary btn-lg btn-block' %>
          <%= link_to "View your profile", user_path(current_user), class: 'btn btn-success btn-lg btn-block' %>
        <% else %>
          <h5 class="text-center">Create your profile to share your information with the community.</h5>
          <%= link_to "Create your profile", new_user_profile_path(current_user), class: 'btn btn-primary btn-lg btn-block' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">The Community</h2>
        <h5 class="text-center">Meet community of developers, enterpreneurs, and investors!</h5>
        <%= link_to "Visit the community", users_path, class: 'btn btn-success btn-lg btn-block' %>
      </div>
    </div>
  <% else %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Basic Membership</h2>
        <h5 class="text-center">Get basic access to the community</h5>
        <h4 class="text-center">Free Membership</h4>
        </br>
        <%= link_to "Basic Sign Up", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Pro Membership</h2>
        <h5 class="text-center">Get access to the community and members' contact information</h5>
        <h4 class="text-center">$10/month Membership </h4>
        </br>
        <%= link_to "Pro Sign Up", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
      </div>
    </div>
  <% end %>
</div>