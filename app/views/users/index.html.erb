
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    
      <h1 class="text-center">Dev Junction Community</h1>
      <h4 class="text-center">Welcome to Dev Junction community. Users must fill out a profile to be visible in the community.</h4>

        <ul class="list-unstyled">
          <% @users.each do |user| %>
            <% if user.profile %>
             
              <li>
                <div class="well row <%= cycle('white-bg', '') %>">
                 
                  <div class="col-sm-4 text-center">
                    <% if user.profile.avatar %>
                      <%= link_to user do %>
                        <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
                      <% end %>
                    <% end %>
                  </div>
                  
                  <div class="profile-name">
                    <%= link_to user do %>
                      <h2 class="about-us"><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                    <% end %>
                      <p>
                        <span class="profile-job-title"><%= user.profile.job_title %></span>
                        <% if user.plan_id == 2 %>
                          <span class="label label-danger">PRO</span>
                        <% end %>
                      </p>
                  </div>
                  
                </div>
              </li>
              
            <% end %>
          <% end %>
        </ul>
  </div>
</div>