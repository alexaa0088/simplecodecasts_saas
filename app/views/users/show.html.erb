<div class="well">
<div class="row">
    <div class="col-md-3 text-center">
        <%= image_tag @user.profile.avatar.url, class: 'user-show-avatar' %>
    </div>
    <div class="col-md-6">
        <h1 class="about-us"><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
        <h3><span class="job_title_icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
        <div class="profile-block profile-description">
            
            <%= @user.profile.description %>
        </div>
        <% if current_user.plan_id == 2 %>
            <div class="profile-block contact-info">
                <h3>Contact Info</h3>
                <%= @user.profile.phone_number %> <br/>
                <%= @user.profile.contact_email %> <br/>
            </div>
        <% end %>
        
    </div>
</div>
</div>